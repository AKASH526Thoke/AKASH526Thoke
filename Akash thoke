 private void textBox1_TextChanged(object sender, EventArgs e)
        {
            int sub, pay, bal;

            sub = int.Parse(txtSub.Text);
            pay = int.Parse(textBox1.Text);


            int tot = pay - sub;

            txtBal.Text = tot.ToString();

        }
